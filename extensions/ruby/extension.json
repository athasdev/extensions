{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.ruby",
  "name": "Ruby",
  "displayName": "Ruby",
  "version": "1.0.0",
  "description": "Ruby language support with syntax highlighting (Ruby, ERB, and common Rails templates)",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "ruby",
      "extensions": [
        ".rb",
        ".rbw",
        ".erb",
        ".rake",
        ".gemspec",
        ".ru",
        ".builder",
        ".jbuilder",
        ".rxml",
        ".rjs",
        ".rabl",
        ".thor",
        ".podspec",
        ".arb"
      ],
      "aliases": ["Ruby", "rb", "erb"],
      "filenames": [
        "Rakefile",
        "Gemfile",
        "Gemfile.lock",
        "Guardfile",
        "Capfile",
        "Appraisals",
        "Berksfile",
        "Brewfile",
        "Cheffile",
        "Dangerfile",
        "Fastfile",
        "Podfile",
        "Rantfile",
        "Thorfile",
        "Vagrantfile",
        "Puppetfile"
      ]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    },
    "embeddedGrammars": [
      {
        "id": "embedded-template",
        "wasmPath": "embedded-template.wasm"
      }
    ]
  }
}
