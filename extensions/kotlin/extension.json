{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.kotlin",
  "name": "Kotlin",
  "displayName": "Kotlin",
  "version": "1.0.0",
  "description": "Kotlin language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "kotlin",
      "extensions": [".kt", ".kts"],
      "aliases": ["Kotlin"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
