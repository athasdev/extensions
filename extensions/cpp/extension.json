{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.cpp",
  "name": "C++",
  "displayName": "C++",
  "version": "1.0.0",
  "description": "C++ language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "cpp",
      "extensions": [".cpp", ".cc", ".cxx", ".hpp", ".hh", ".hxx"],
      "aliases": ["C++", "cpp"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
