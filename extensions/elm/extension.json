{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.elm",
  "name": "Elm",
  "displayName": "Elm",
  "version": "1.0.0",
  "description": "Elm language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "elm",
      "extensions": [".elm"],
      "aliases": ["Elm"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
