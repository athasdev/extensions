{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.tlaplus",
  "name": "TLAPLUS",
  "displayName": "TLA+",
  "version": "1.0.0",
  "description": "TLA+ language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "tlaplus",
      "extensions": [".tla"],
      "aliases": ["TLA+", "TLAPLUS", "tlaplus"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
