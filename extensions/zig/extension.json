{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.zig",
  "name": "Zig",
  "displayName": "Zig",
  "version": "1.0.0",
  "description": "Zig language support with syntax highlighting and LSP",
  "publisher": "Athas",
  "categories": [
    "Language"
  ],
  "languages": [
    {
      "id": "zig",
      "extensions": [
        ".zig",
        ".zon"
      ],
      "aliases": [
        "Zig"
      ]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    },
    "lsp": {
      "name": "zls",
      "runtime": "binary",
      "args": []
    }
  }
}
