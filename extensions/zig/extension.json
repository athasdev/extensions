{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.zig",
  "name": "Zig",
  "displayName": "Zig",
  "version": "1.0.0",
  "description": "Zig language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "zig",
      "extensions": [".zig"],
      "aliases": ["Zig"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
