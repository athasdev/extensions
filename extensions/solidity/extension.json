{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.solidity",
  "name": "Solidity",
  "displayName": "Solidity",
  "version": "1.0.0",
  "description": "Solidity language support with syntax highlighting and LSP",
  "publisher": "Athas",
  "categories": [
    "Language"
  ],
  "languages": [
    {
      "id": "solidity",
      "extensions": [
        ".sol"
      ],
      "aliases": [
        "Solidity"
      ]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    },
    "lsp": {
      "name": "solidity-language-server",
      "runtime": "binary",
      "args": [
        "--stdio"
      ]
    }
  }
}
