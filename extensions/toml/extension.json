{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.toml",
  "name": "TOML",
  "displayName": "TOML",
  "version": "1.0.0",
  "description": "TOML language support with syntax highlighting, LSP, and formatting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "toml",
      "extensions": [".toml"],
      "aliases": ["TOML"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    },
    "lsp": {
      "name": "taplo",
      "runtime": "rust",
      "package": "taplo-cli",
      "args": ["lsp", "stdio"]
    },
    "formatter": {
      "name": "taplo",
      "runtime": "rust",
      "package": "taplo-cli",
      "args": ["format", "-"]
    }
  }
}
