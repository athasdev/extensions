{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.ql",
  "name": "QL",
  "displayName": "QL",
  "version": "1.0.0",
  "description": "QL language support with syntax highlighting",
  "publisher": "Athas",
  "categories": ["Language"],
  "languages": [
    {
      "id": "ql",
      "extensions": [".ql", ".qll"],
      "aliases": ["QL", "CodeQL"]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    }
  }
}
