{
  "id": "athas.go-full",
  "name": "Go Tools",
  "displayName": "Go Tools",
  "description": "gopls, gofumpt, and golangci-lint packaged for Athas",
  "version": "1.0.0",
  "publisher": "Athas",
  "license": "MIT",
  "category": "language",
  "capabilities": {
    "type": "language",
    "languageId": "go",
    "fileExtensions": ["go"],
    "aliases": ["Go", "golang"],
    "lsp": {
      "server": {
        "darwin-arm64": "lsp/gopls-darwin",
        "darwin-x64": "lsp/gopls-darwin",
        "linux-x64": "lsp/gopls-linux",
        "win32-x64": "lsp/gopls.exe"
      },
      "args": [],
      "fileExtensions": [".go"],
      "languageIds": ["go"]
    },
    "formatter": {
      "command": {
        "darwin-arm64": "lsp/gofumpt-darwin",
        "darwin-x64": "lsp/gofumpt-darwin",
        "linux-x64": "lsp/gofumpt-linux",
        "win32-x64": "lsp/gofumpt.exe"
      },
      "args": [],
      "inputMethod": "stdin",
      "outputMethod": "stdout"
    },
    "linter": {
      "command": {
        "darwin-arm64": "lsp/golangci-lint-darwin",
        "darwin-x64": "lsp/golangci-lint-darwin",
        "linux-x64": "lsp/golangci-lint-linux",
        "win32-x64": "lsp/golangci-lint.exe"
      },
      "args": ["run", "--out-format", "json"],
      "diagnosticFormat": "regex"
    }
  },
  "installation": {
    "minVersion": "0.3.0",
    "platforms": {
      "darwin-arm64": {
        "downloadUrl": "https://athas.dev/extensions/go/go-darwin-arm64.tar.gz",
        "size": 0,
        "checksum": ""
      },
      "darwin-x64": {
        "downloadUrl": "https://athas.dev/extensions/go/go-darwin-x64.tar.gz",
        "size": 0,
        "checksum": ""
      },
      "linux-x64": {
        "downloadUrl": "https://athas.dev/extensions/go/go-linux-x64.tar.gz",
        "size": 0,
        "checksum": ""
      },
      "win32-x64": {
        "downloadUrl": "https://athas.dev/extensions/go/go-win32-x64.tar.gz",
        "size": 0,
        "checksum": ""
      }
    }
  }
}

