{
  "$schema": "https://athas.dev/schemas/extension.json",
  "id": "athas.objc",
  "name": "ObjectiveC",
  "displayName": "Objective-C",
  "version": "1.0.0",
  "description": "Objective-C language support with syntax highlighting and LSP",
  "publisher": "Athas",
  "categories": [
    "Language"
  ],
  "languages": [
    {
      "id": "objc",
      "extensions": [
        ".m",
        ".mm",
        ".h"
      ],
      "aliases": [
        "Objective-C",
        "ObjC",
        "objc"
      ]
    }
  ],
  "capabilities": {
    "grammar": {
      "wasmPath": "parser.wasm",
      "highlightQuery": "highlights.scm"
    },
    "lsp": {
      "name": "clangd",
      "runtime": "binary",
      "args": [
        "--background-index"
      ]
    }
  }
}
